# ============================================
# CONFIGURACIÓN DE GO HIGH LEVEL API
# ============================================

# Tu API Key de Go High Level
# Para obtenerla: Settings > Business Profile > API Key
GHL_API_KEY=tu_api_key_aqui

# ID de tu Location (Sub-Account)
# Lo encuentras en Settings > Business Profile > Location ID
GHL_LOCATION_ID=tu_location_id_aqui

# ID del Pipeline de Oportunidades
# Ve a Opportunities > Settings del pipeline > copia el ID de la URL
GHL_PIPELINE_ID=tu_pipeline_id_aqui

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# NOMBRES DE TUS ETAPAS DEL PIPELINE
# (Ajusta estos nombres exactamente como aparecen en tu GHL)
# ============================================
STAGE_NUEVO_LEAD=E1. NUEVO LEAD
STAGE_INTERES_PENDIENTE=E2.INTERES EN VV- PENDIENTE DE...
STAGE_SEGUIMIENTO_FOTOS=E3.SEGUIMIENTO -FOTOS NO E...
STAGE_FOTOS_RECIBIDAS=E4.FOTOS RECIBIDAS- PENDIE...
STAGE_VALORACION_VIRTUAL=E5.VALORACION VIRTUAL AGE...
STAGE_VV_REAGENDADA=VV RE AGENDADA
STAGE_VV_AGENDADA_NO_CONTESTA=E6. VV AGENDADA- NO CONTE...
STAGE_VALORACION_REALIZADA=E7.VALORACION REALIZADA-C...
STAGE_SEGUIMIENTO_CIERRE=E8. SEGUIMIENTO PARA CIERRE
STAGE_DEPOSITO_REALIZADO=E9.DEPOSITO REALIZADO- SIN...
STAGE_FECHA_CIRUGIA=E10.FECHA DE CIRUGIA SELEC...

# ============================================
# CAMPOS PERSONALIZADOS DE GHL
# (IDs de los campos custom donde guardas los depósitos)
# ============================================
CUSTOM_FIELD_DEPOSITO=deposito_total
CUSTOM_FIELD_FUENTE_CAMPANA=fuente_campana
